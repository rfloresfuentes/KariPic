<%= form_with(model: picture, local: true) do |form| %>

  <div>
    <%= form.label :nombre, style: "display: block" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :descripción, style: "display: block" %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :fotografía, style: "display: block" %>
    <%= form.file_field :image, class: 'form-control-file' %>
  </div>

  <%= form.submit 'Guardar Fotografía', class: 'btn btn-outline-secondary btn-sm' %>
<% end %>
